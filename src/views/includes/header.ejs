                        <figure id="create">
                            <a class="create" href="/products/create/details"><i class="fa-solid fa-circle-plus"></i>
                            </a>
                        </figure>
                        <% } %>
        </div>
    </section>
    <% if (user) { %>
        <div id="userMenu">

            <p>
                <%=user.nombre %>
            </p>
            <figure id="userAvatar"><img src="/images/avatars/<%=user.image%>" alt=""></figure>

