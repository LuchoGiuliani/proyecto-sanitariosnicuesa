<header>
    <section id="headerContainer">
        <div class="navbar_left">
            <nav id="navbar">
                <figure class="navbar__toggle" id="mobile-menu">
                    <span id="bar"></span>
                    <span id="bar"></span>
                    <span id="bar"></span>
                </figure>
                <ul class="navbar__menu">
                    <li class="navbar__item">
                        <a href="/" class="navbar__links">Home</a>
                    </li>
                    <li class="navbar__item">
                        <a href="/products/finder" class="navbar__links"> Productos </a>
                    </li>

                    <li class="navbar__item">
                        <a href="/carrito" class="navbar__links">Carro</a>
                    </li>

                </ul>
            </nav>
            <section>
                <a href="/" class="logo">
                    <img src="/images/logo-sanitario.svg" alt="imagen">
